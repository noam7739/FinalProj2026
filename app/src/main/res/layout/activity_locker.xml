<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1A1A1A"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר את הכדור שלך"
        android:textColor="#FFD700"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSelectBlue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ball_blue" />

        <ImageButton
            android:id="@+id/btnSelectRed"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ball_red" />

        <ImageButton
            android:id="@+id/btnSelectYellow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ball_yellow" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveLocker"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="שמור ובחר"
        android:textSize="18sp"
        android:backgroundTint="#FFD700"
        android:textColor="#000000"/>

</LinearLayout>